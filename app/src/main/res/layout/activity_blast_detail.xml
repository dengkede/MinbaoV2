<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_bg"
    android:orientation="vertical"
    tools:context="com.hlkj.minbao.ui.activity.BlastDetailActivity">

    <include layout="@layout/layout_common_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/layout_detail_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_blast_detail_top"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="7dp"
            android:paddingEnd="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_detail_lab_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blast_detail_lab_1"
                android:textColor="@color/color_map_lab"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_detail_content_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="60dp"
                android:layout_toEndOf="@id/tv_detail_lab_1"
                android:layout_toRightOf="@id/tv_detail_lab_1"
                android:gravity="end"
                android:text="杭甬高速公路夏巷互通至余梁公路连 接线(新增边坡)石方爆破工程"
                android:textColor="@color/color_home_list_title"
                android:textSize="12sp" />
        </RelativeLayout>

        <com.wxh.common4mvp.customView.ExpandLayout
            android:id="@+id/layout_detail_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_detail_top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ccffffff">

            <RelativeLayout
                android:id="@+id/layout_middle_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:paddingEnd="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tv_detail_lab_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blast_detail_lab_2"
                    android:textColor="@color/color_map_lab"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_detail_content_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/tv_detail_lab_2"
                    android:layout_toRightOf="@id/tv_detail_lab_2"
                    android:gravity="end"
                    android:text="浙江运冠民用危化品运输有限公司"
                    android:textColor="@color/color_home_list_title"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_middle_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_middle_2"
                android:paddingBottom="7dp"
                android:paddingEnd="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tv_detail_lab_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blast_detail_lab_3"
                    android:textColor="@color/color_map_lab"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_detail_content_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/tv_detail_lab_3"
                    android:layout_toRightOf="@id/tv_detail_lab_3"
                    android:gravity="end"
                    android:text="余姚实达民爆爆破有限公司"
                    android:textColor="@color/color_home_list_title"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_middle_4_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_middle_3"
                android:orientation="horizontal"
                android:paddingBottom="7dp"
                android:paddingEnd="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingStart="10dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_detail_lab_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blast_detail_lab_4"
                        android:textColor="@color/color_map_lab"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_detail_content_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tv_detail_lab_4"
                        android:layout_toRightOf="@+id/tv_detail_lab_4"
                        android:gravity="center"
                        android:text="C级"
                        android:textColor="@color/color_home_list_title"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_detail_lab_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blast_detail_lab_5"
                        android:textColor="@color/color_map_lab"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_detail_content_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/tv_detail_lab_5"
                        android:layout_toRightOf="@+id/tv_detail_lab_5"
                        android:gravity="end"
                        android:text="第三次"
                        android:textColor="@color/color_home_list_title"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_middle_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_middle_4_5"
                android:paddingBottom="7dp"
                android:paddingEnd="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tv_detail_lab_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blast_detail_lab_6"
                    android:textColor="@color/color_map_lab"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_detail_content_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/tv_detail_lab_6"
                    android:layout_toRightOf="@id/tv_detail_lab_6"
                    android:gravity="end"
                    android:text="浙江省余姚市阳明街道"
                    android:textColor="@color/color_home_list_title"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_middle_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_middle_6"
                android:paddingBottom="7dp"
                android:paddingEnd="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tv_detail_lab_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blast_detail_lab_7"
                    android:textColor="@color/color_map_lab"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_detail_content_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/tv_detail_lab_7"
                    android:layout_toRightOf="@id/tv_detail_lab_7"
                    android:gravity="end"
                    android:text="2018年08月18日"
                    android:textColor="@color/color_home_list_title"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_middle_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_middle_7"
                android:paddingBottom="7dp"
                android:paddingEnd="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tv_detail_lab_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blast_detail_lab_8"
                    android:textColor="@color/color_map_lab"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_detail_content_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/tv_detail_lab_8"
                    android:layout_toRightOf="@id/tv_detail_lab_8"
                    android:gravity="end"
                    android:text="田泽平(技术员)\t\t李成博(保管员)\n李国志(安全员)\t\t吴恒华(爆破员)"
                    android:textColor="@color/color_home_list_title"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_middle_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_middle_8"
                android:paddingBottom="7dp"
                android:paddingEnd="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tv_detail_lab_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blast_detail_lab_9"
                    android:textColor="@color/color_map_lab"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_detail_content_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/tv_detail_lab_9"
                    android:layout_toRightOf="@id/tv_detail_lab_9"
                    android:gravity="end"
                    android:text="郭昊(监理)"
                    android:textColor="@color/color_home_list_title"
                    android:textSize="12sp" />

            </RelativeLayout>

        </com.wxh.common4mvp.customView.ExpandLayout>

        <RelativeLayout
            android:id="@+id/layout_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_detail_middle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_blast_detail_bottom"
            android:minHeight="10dp"
            android:paddingTop="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_flex" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_detail_bottom"
            android:layout_marginTop="10dp"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/icon_refresh"
            app:backgroundTint="@color/color_icon_suspension"
            app:elevation="8dp"
            app:fabSize="normal"
            app:rippleColor="#44000000" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_bottom_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_common_orange"
            android:text="@string/blast_detail_btn_refund"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_bottom_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_common_blue"
            android:text="@string/blast_detail_btn_signature"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_bottom_left2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_common_orange"
            android:text="@string/blast_detail_btn_refund"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_bottom_right2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_common_blue"
            android:text="@string/blast_detail_btn_signature"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_bottom_left3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_common_orange"
            android:text="@string/blast_detail_btn_refund"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_bottom_right3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_common_blue"
            android:text="@string/blast_detail_btn_signature"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
