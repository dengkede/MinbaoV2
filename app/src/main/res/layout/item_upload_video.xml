<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_upload_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_upload_video_nomal"
        app:backgroundTint="@color/color_icon_suspension"
        app:elevation="8dp"
        app:fabSize="normal"
        app:rippleColor="#44000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="@string/common_upload_video"
        android:textColor="@color/color_home_list_title"
        android:textSize="12sp" />

</LinearLayout>